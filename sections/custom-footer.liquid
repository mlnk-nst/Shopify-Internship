  {% if section.settings.show_language_selector and section.blocks.size > 0 %}
    <div class="language-selector">
      <span class="language-label">{{ section.settings.language_label }}</span>
      <div class="language-dropdown">
        {%- assign default_language = section.blocks | where: "settings.is_default", true | first -%}
        {%- assign first_language = section.blocks.first -%}
        {%- assign current_language = default_language | default: first_language -%}
        
        <button class="language-current" id="language-toggle" aria-label="Select language">
          {% if current_language.settings.flag_image %}
            <img src="{{ current_language.settings.flag_image | img_url: '30x30', crop: 'center' }}" 
                 width="30" 
                 height="30" 
                 class="language-flag-image"
                 alt="{{ current_language.settings.name | escape }}"
                 loading="lazy">
          {% else %}
            <div class="language-flag-placeholder"></div>
          {% endif %}
          <span class="language-arrow">▼</span>
        </button>
        
        <div class="language-dropdown-menu" id="language-dropdown">
          {% for block in section.blocks %}
            {% if block.type == 'language' and block.settings.flag_image %}
              <button class="language-option" 
                      data-image="{{ block.settings.flag_image | img_url: '30x30', crop: 'center' }}"
                      data-code="{{ block.settings.code }}"
                      aria-label="{{ block.settings.name | escape }}">
                <img src="{{ block.settings.flag_image | img_url: '30x30', crop: 'center' }}" 
                     width="30" 
                     height="30" 
                     class="language-flag-image"
                     alt="{{ block.settings.name | escape }}"
                     loading="lazy">
              </button>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}


