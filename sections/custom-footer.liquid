        <h3>Calling all DORINA SUPERFANS!</h3>
        <p>Sign up to be the first to hear about new products and exclusive offers.</p>
        {% form 'customer', class: 'newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-input-group">
            <input type="email"
                   name="contact[email]"
                   class="newsletter-input"
                   value="{{ form.email }}"
                   placeholder="Email"
                   aria-label="Email"
                   required>
            <button type="submit" class="shop-now-btn">SUBSCRIBE</button>
          </div>
          {% if form.errors %}
            <div class="newsletter-error">{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</div>
